
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Teacher/Views/Shared/_TeacherLayout.cshtml";
    int count = 1;
}



@model LessonCreateVM
<div class="container my-5">
    <div class="row justify-content-center">
        <form method="post" enctype="multipart/form-data">
            <div class="col-lg-12 my-2"> <button class="btn btn-outline-success" type="submit">Submit</button></div>
             <div class="col-lg-4" >
                 <input asp-for="Name" />
                   </div>
            <div class="col-lg-4" >
                
                      
                        <select  style="border-radius: 0px;
                                    outline: none;
                                    height: 3rem;
                                    background: #f3f4f9;" asp-for="LessonTypeId" asp-items="@ViewBag.LessonTypes ">
                            </select>
            </div>
        <div class="col-lg-8">
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col" class="text-center">Score</th>
     
    </tr>
  </thead>
  <tbody>
      @foreach (var stu in ViewBag.Students)
     {
          <tr>
      <th scope="row">@count</th>
      <td>@stu.FullName <input type="hidden" asp-for="AppUserId"  value="@stu.Id" style="border-bottom:1px solid" /> </td>
      <td class="text-center"> <input type="number" asp-for="Score" max="100" min="0" style="border-bottom:1px solid" /></td>
      
                            </tr>
                            count++;
                        }
   
  
     
  
  </tbody>
</table>
</div>
</form>
</div>
</div>

