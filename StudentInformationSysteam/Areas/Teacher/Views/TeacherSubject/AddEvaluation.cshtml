
@{
    ViewData["Title"] = "AddAttendance";
    Layout = "~/Areas/Teacher/Views/Shared/_TeacherLayout.cshtml";
}
@model List<AppUser>
<div class="container my-5">
    <div class="row justify-content-center">
        <form method="post" enctype="multipart/form-data">
            <div class="col-lg-12 my-2"> <button class="btn btn-outline-success" type="submit">Submit</button></div>
            <div class="col-lg-4" >
                <select style="border-radius: 0px;
                                    outline: none;
                                    height: 3rem;
                                    background: #f3f4f9;" autofocus="off" name="examId" id="ecaluation" required>
                            <option value="" data-isdefault="true" hidden >Exam Type</option>
                       @foreach (var exam in @ViewBag.ExamType) { 
                                    <option value="@exam.Id">@exam.Name</option>}
                           
                        </select>
            </div>
        <div class="col-lg-8">
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col" class="text-center">Score</th>
     
    </tr>
  </thead>
  <tbody>
      @foreach (var stu in Model)
     {
          <tr>
      <th scope="row">1</th>
      <td>@stu.FullName <input type="hidden" name="studentIds"  value="@stu.Id" style="border-bottom:1px solid" /> </td>
      <td class="text-center"> <input type="number" name="scoors" max="100" min="0" style="border-bottom:1px solid" /></td>
      
    </tr>
     }
   
  
     
  
  </tbody>
</table>
</div>
</form>
</div>
</div>