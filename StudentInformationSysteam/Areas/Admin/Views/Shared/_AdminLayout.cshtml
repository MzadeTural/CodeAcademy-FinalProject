              <i class="material-icons opacity-10">dashboard</i>
            </div>
            <span class="nav-link-text ms-1">Dashboard</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" asp-action="AddStudent" asp-controller="Student">
            <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
              <i class="fas fa-user-plus  opacity-10"></i>
            </div>
            <span class="nav-link-text ms-1">Add Student</span>
          </a>
         
        </li>
        <li class="nav-item">
          <a class="nav-link text-white " asp-action="Create" asp-controller="Teacher">
            <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
             
               <i class="fas fa-user-plus  opacity-10"></i>
            </div>
            <span class="nav-link-text ms-1">Add Teacher</span>
          </a>
        </li>   
        <li class="nav-item">
            <a class="nav-link text-white" asp-action="FacultyTable" asp-controller="Faculty">
            <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
              <i class="material-icons opacity-10">account_balance</i>
            </div>
            <span class="nav-link-text ms-1"> Faculties</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white "asp-action="Create" asp-controller="Group">
            <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                 <i class="fas fa-users"></i>
            </div>
            <span class="nav-link-text ms-1">Add Group</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white " asp-action="Create" asp-controller="Notification" >
            <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
              <i class="material-icons opacity-10">notifications</i>
            </div>
            <span class="nav-link-text ms-1">Notifications</span>
          </a>
        </li>
         <li class="nav-item">
          <a class="nav-link text-white " asp-action="Create" asp-controller="Subject" >
            <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
              <i class="fas fa-book-medical"></i>
            </div>
            <span class="nav-link-text ms-1">Add Subject</span>
          </a>
        </li>
       
      </ul>
    </div>
 
  </aside>
  <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
     @await Component.InvokeAsync("AdminHeader")
     
        @RenderBody()
    </main>
    
    
  
